---
import ServicesHero from '../components/ServicesHero.astro';
import ReactAccordion from '../components/ReactAccordion';
import Methodology from '../components/ServicesMethodolgy.astro';
import Layout from '../layouts/Layout.astro';

import { getNotionTexts } from '../lib/notion';
import { notionDatabases } from '../lib/notionConfig';

const items = await getNotionTexts(notionDatabases.accordion);
---

<Layout>
	<ServicesHero />
    <ReactAccordion items={items} client:load />
    <Methodology />
</Layout>